<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >
    <RelativeLayout android:id="@+id/header_bg"
    	android:layout_width="match_parent"
    	android:layout_height="70dip"
    	android:background="@drawable/header_bg" >
    	<ImageView android:id="@+id/logo"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentLeft="true"
    		android:layout_centerVertical="true"
    		android:layout_marginTop="10dip"
    		android:layout_marginBottom="10dip"
    		android:src="@drawable/logo" />
    	<Button android:id="@+id/account_button"
    		style="@style/TextShadow"
    		android:layout_width="wrap_content"
    		android:layout_height="match_parent"
    		android:paddingLeft="15dip"
    		android:paddingRight="15dip"
    		android:layout_alignParentRight="true"
    		android:layout_centerVertical="true"
    		android:gravity="center"
    		android:text="@string/sign_in"
    		android:textColor="@color/white"
    		android:textSize="24sp"
    		android:textStyle="bold"
    		android:background="@drawable/header_button" />
    </RelativeLayout>
    <LinearLayout android:id="@+id/main_menu"
    	android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/header_bg"
    	android:paddingTop="60dip"
    	android:paddingLeft="10dip"
    	android:paddingRight="10dip" >
    	<TextView android:id="@+id/location_label"
    		style="@style/TextShadow"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_gravity="left"
    		android:layout_marginBottom="5dip"
    		android:text="@string/location_label"
    		android:textSize="18sp"
    		android:textColor="#333333" />
    	<com.devspacenine.fastfood.AddressSelectorForm android:id="@+id/location"
    		android:layout_width="match_parent"
			android:layout_height="wrap_content"
    		android:layout_marginBottom="15dip" />
    	<TextView android:id="@+id/cuisine_label"
    		style="@style/TextShadow"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_gravity="left"
    		android:layout_marginBottom="5dip"
    		android:text="@string/cuisine_label"
    		android:textSize="18sp"
    		android:textColor="#333333" />
    	<TextView android:id="@+id/cuisine"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginBottom="20dip"
    		android:background="@drawable/form_editable"
    		android:text="@string/default_cuisine"
    		android:textColor="#666666"
			android:textSize="18sp"
			android:paddingTop="13dip"
			android:paddingBottom="13dip"
			android:paddingLeft="10dip"
			android:clickable="true"
			android:focusable="true" />
		<Button android:id="@+id/search_button"
			style="@style/SubmitButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="5dip"
			android:text="@string/search_button" />
		<TextView
			style="@style/TextShadow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dip"
			android:layout_gravity="center"
			android:text="or"
			android:textSize="18sp"
			android:textColor="#333333" />
		<Button android:id="@+id/favorites_button"
			style="@style/SubmitButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="@string/favorites_button" />
    </LinearLayout>
</RelativeLayout>
