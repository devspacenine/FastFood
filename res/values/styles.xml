<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<style name="TextShadow">
		<item name="android:shadowColor">#666666</item>
		<item name="android:shadowDx">1.0</item>
		<item name="android:shadowDy">1.0</item>
		<item name="android:shadowRadius">1.0</item>
	</style>
	<style name="SubHeader" parent="@style/TextShadow">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">10dip</item>
		<item name="android:background">@drawable/subheader_bg</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/dark_text</item>
	</style>
	<style name="FormLabel" parent="@style/TextShadow">
		<item name="android:textSize">18dp</item>
		<item name="android:textColor">@color/dark_text</item>
	</style>
	<style name="SimpleButton">
		<item name="android:paddingTop">10dip</item>
		<item name="android:paddingBottom">10dip</item>
		<item name="android:paddingLeft">20dip</item>
		<item name="android:paddingRight">20dip</item>
		<item name="android:background">@drawable/simple_button</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:shadowColor">#363636</item>
		<item name="android:shadowDx">1.0</item>
		<item name="android:shadowDy">1.0</item>
		<item name="android:shadowRadius">1.0</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="SmallButton">
		<item name="android:paddingTop">5dip</item>
		<item name="android:paddingBottom">5dip</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:paddingRight">10dip</item>
		<item name="android:background">@drawable/simple_button</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:shadowColor">#363636</item>
		<item name="android:shadowDx">1.0</item>
		<item name="android:shadowDy">1.0</item>
		<item name="android:shadowRadius">1.0</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="TextInput">
		<item name="android:background">@drawable/form_editable</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/grey_text</item>
		<item name="android:paddingTop">13dip</item>
		<item name="android:paddingBottom">13dip</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:paddingRight">10dip</item>
	</style>
	<style name="LinkButton">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/link_text_selector</item>
		<item name="android:background">@drawable/link_bg_selector</item>
		<item name="android:padding">5dip</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
	</style>
</resources>